{{template "base" .}}

{{define "content"}}
{{$res := index .Data "reservation"}}
<section>
    <div class="container mx-auto pt-10 flex flex-col gap-4 items-center">
        <h1 class="text-stone-800 text-2xl font-bold">
            Reservation Summary
        </h1>
        <table>
            <thead></thead>
            <tbody>
                <tr>
                    <td>Name:</td>
                    <td>{{$res.FirstName}} {{$res.LastName}}</td>
                </tr>
                <tr>
                    <td>Arrival:</td>
                    <td></td>
                </tr>
                <tr>
                    <td>Departure:</td>
                    <td></td>
                </tr>
                <tr>
                    <td>Email:</td>
                    <td>{{$res.Email}}</td>
                </tr>
                <tr>
                    <td>Phone:</td>
                    <td>{{$res.Phone}}</td>
                </tr>
            </tbody>
        </table>
    </div>
</section>
{{end}}
