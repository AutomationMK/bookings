{{template "base" .}}

{{define "content"}}
<div class="slider relative h-[80vh] w-full">
    <!-- slide -->
    <figure class="slide absolute h-full w-full">
        <img src="/static/images/outside.png" alt="Resort" class="hero_image">
        <figcaption class="hero_content">
            <div class="hero_textbox">
                <h2 class="hero_header">
                    Find your peace
                </h2>
                <p class="hero_paragraph">
                    With up to two suites we have what you are looking for
                </p>
            </div>
            <a href="/make-reservation" class="hero_cta">
                Book Today
            </a>
        </figcaption>
    </figure>
    <figure class="slide absolute h-full w-full">
        <img src="/static/images/tray.png" alt="Resort" class="hero_image">
        <figcaption class="hero_content">
            <div class="hero_textbox">
                <h2 class="hero_header">
                    Enjoy delicious cuisine
                </h2>
                <p class="hero_paragraph">
                    Our Michelin Star chefs will have you wanting more
                </p>
            </div>
            <a href="/make-reservation" class="hero_cta">
                Book Today
            </a>
        </figcaption>
    </figure>
    <!-- slide -->
    <figure class="slide absolute h-full w-full">
        <img src="/static/images/woman-laptop.png" alt="Woman relaxing with a coffee in front of her computer"
            class="hero_image">
        <figcaption class="hero_content">
            <div class="hero_textbox">
                <h2 class="hero_header">
                    Browse high speed internet
                </h2>
                <p class="hero_paragraph">
                    For business or pleasure we have blazing fast internet
                </p>
            </div>
            <a href="/make-reseration" class="hero_cta">
                Book Today
            </a>
        </figcaption>
    </figure>
    <!-- slide buttons -->
    <div class="sm:container sm:mx-auto relative h-full w-full">
        <div class="slide_btn slide_btn-left group">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5"
                stroke="currentColor" class="slide_btn_logo">
                <path stroke-linecap="round" stroke-linejoin="round" d="M15.75 19.5 8.25 12l7.5-7.5" />
            </svg>
        </div>
        <div class="slide_btn slide_btn-right group">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5"
                stroke="currentColor" class="slide_btn_logo">
                <path stroke-linecap="round" stroke-linejoin="round" d="m8.25 4.5 7.5 7.5-7.5 7.5" />
            </svg>
        </div>
    </div>
    <div class="dots"></div>
</div>
<div class="container mx-auto">
    <div class="flex flex-col gap-2 px-4">
        <h1 class="text-2xl">This is the homepage</h1>
        <p>This is some text</p>
    </div>
</div>
{{end}}
