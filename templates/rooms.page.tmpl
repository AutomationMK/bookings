{{template "base" .}}

{{define "content"}}
<section class="container mx-auto px-4 py-20 flex justify-center">
    <div class="grid gap-x-30 gap-y-10 xl:grid-cols-2 justify-center w-fit">
        <!-- room -->
        <div
            class="flex flex-col md:flex-row xl:flex-col w-fit h-fit rounded-md overflow-hidden shadow-lg shadow-stone-800/20">
            <img src="/static/images/premium-suite1.jpg" alt="Premium Suite Room"
                class="max-w-md h-full w-full object-cover">
            <div class="flex flex-col items-center justify-center p-8 bg-amber-100 gap-6">
                <div class="flex flex-col items-center gap-6 lg:flex-row xl:flex-col">
                    <h2 class="text-2xl md:text-3xl lg:text-4xl text-stone-800 font-bold text-center">
                        Premium Suite
                    </h2>
                    <a href="/rooms/premium-suite"
                        class="flex items-center h-fit w-fit px-4 py-2 text-lg lg:text-2xl text-amber-200 font-bold bg-stone-700 border-3 border-stone-700 rounded-md hover:text-stone-700 hover:bg-transparent transition">
                        View Room
                    </a>
                </div>
                <h3 class="text-lg text-stone-800 font-semibold md:text-xl lg:text-2xl text-center">
                    350 sq ft / Garden View
                </h3>
            </div>
        </div>
        <!-- room -->
        <div
            class="flex flex-col md:flex-row xl:flex-col w-fit h-fit rounded-md overflow-hidden shadow-lg shadow-stone-800/20">
            <img src="/static/images/deluxe-room1.jpg" alt="Deluxe Room" class="max-w-md h-full w-full object-cover">
            <div class="flex flex-col items-center justify-center p-8 bg-amber-100 gap-6">
                <div class="flex flex-col items-center gap-6 lg:flex-row xl:flex-col">
                    <h2 class="text-2xl md:text-3xl lg:text-4xl text-stone-800 font-bold text-center">
                        Deluxe Room
                    </h2>
                    <a href="/rooms/deluxe-room"
                        class="flex items-center h-fit w-fit px-4 py-2 text-lg lg:text-2xl text-amber-200 font-bold bg-stone-700 border-3 border-stone-700 rounded-md hover:text-stone-700 hover:bg-transparent transition">
                        View Room
                    </a>
                </div>
                <h3 class="text-lg text-stone-800 font-semibold md:text-xl lg:text-2xl text-center">
                    288 sq ft / Nature View
                </h3>
            </div>
        </div>
    </div>
</section>
{{end}}
