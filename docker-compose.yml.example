services:
  postgres:
    image: 'postgres:18'
    container_name: bookings_app
    restart: always
    environment:
      POSTGRES_USER: postgres
      POSTGRES_PASSWORD: 12345678
      POSTGRES_DB: bookings
    ports:
      - '5431:5432'
    volumes:
      - ./db-data:/var/lib/postgresql
      - ./sql/init.sql:/docker-entrypoint-initdb.d/create_tables.sql
